{% extends "base.j2" %}
{% from "macros.j2" import render_excerpt with context  %}
{% block main %}
{% block page_title %}<h1 class="listing">{{ resource.meta.title }}</h1>{% endblock %}
<section class="archives">
<ul class="post clear">
{% for res in resource.node.walk_resources_sorted_by_time() %}
<li class="post clear">
    <div class="list-time">
    <time datetime="{{ res.meta.created.strftime('%Y-%m-%d') }}">
        &#8986; {{ res.meta.created.strftime('%a, %d %b %Y') }}
    </time>
    </div>
    <div class="list-title">
    <a href="{{ content_url(res.url) }}"> &rarr; {{ res.meta.title }}</a>
    </div>
    <div class="list-tags">
    {% if res.meta.tags %}
    <ul class="tags">
    {% for tag in res.meta.tags %}
    <li>
        <a class="small" href="{{ content_url('tags/'~tag~'.html') }}">
           {{ tag }}
        </a>
    </li>
    {% endfor %}
    </ul>
    {% endif %}
    </div>
</li>
{% endfor %}
</ul>
</section>
{% endblock %}